{
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ],
    "coverageDirectory": "test/reports/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "reporters": [
      "default",
      [ "jest-junit", { "outputDirectory": "test/reports/junit" , "outputName": "jest-junit.xml"} ]
      
    ],
    "testTimeout": 10000,
    "verbose": true

}